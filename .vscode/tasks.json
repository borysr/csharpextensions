{
    "version": "2.0.0",
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
    },
    "tasks": [
        {
            "label": "build",
            "command": "yarn",
            "type": "shell",
            "options": {
                "shell": {
                    "executable": "/bin/bash",
                    "args": [
                        "-lc"
                    ]
                },
                "env": {
                    "PATH": "/home/borysr/.local/share/nvm/v24.12.0/bin:${env:PATH}"
                }
            },
            "args": [
                "run",
                "compile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "buildDev",
			"command": "yarn",
			"type": "shell",
            "options": {
                "shell": {
                    "executable": "/bin/bash",
                    "args": [
                        "-lc"
                    ]
                },
                "env": {
                    "PATH": "/home/borysr/.local/share/nvm/v24.12.0/bin:${env:PATH}"
                }
            },
			"args": [
				"run",
				"compileDev"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
        },
        {
			"label": "test",
			"command": "echo",
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"args": [
				"Run tests in VS Code by launching the debugger with the 'Launch Tests' configuration."
			]
		},
    ]
}
